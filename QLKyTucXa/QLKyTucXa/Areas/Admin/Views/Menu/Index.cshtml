@model IEnumerable<Model.EF.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenMenu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Link)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThuTuHienThi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrangThai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoaiMenu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MenuCha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Icon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThuocTinh)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenMenu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThuTuHienThi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrangThai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiMenu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MenuCha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Icon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThuocTinh)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDMenu }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDMenu }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDMenu })
        </td>
    </tr>
}

</table>
