@model QLKyTucXa.Models.DangKyModel

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Assets/admin/css/regrister.css" rel="stylesheet" />
<script src="~/Assets/admin/js/thongbao.js"></script>

<div class="jumbotron" style="background-color:aliceblue">
    <p class="chu" style="font-size:30px"><b>Thông tin sinh viên đăng ký</b></p>

    @using (Html.BeginForm("DangKy", "PhieuDangKy", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table class="tableTT">
        <tr>
            <td colspan="4">

                <hr />
            </td>
        </tr>
        <tr></tr>

        <tr>
            <td width="30%">
                @Html.LabelFor(model => model.NV1)
            </td>
            <td width="70%">
                @Html.DropDownList("NV1", null, new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(model => model.NV1, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.NV2)
            </td>
            <td width="70%">
                @Html.DropDownList("NV2", null, new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(model => model.NV2, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(model => model.NV3)
            </td>
            <td width="70%">
                @Html.DropDownList("NV3", null, new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(model => model.NV3, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td></td>
        </tr>

        <tr>
            <td colspan="4" align="center">
                <input type="submit" value="Đăng Ký" class="btn btn-facebook" />
            </td>
        </tr>
    </table>

    }
</div>

